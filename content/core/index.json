{
  "seo": {
    "title": "Singularity",
    "description": "Singularity facilitates onboarding of large quantaties of data (PB-scale) to the Filecoin network in an efficient, secure, and flexible way."
  },
  "og": {
    "site_name": "Singularity",
    "url": "https://singularity.storage",
    "type": "website",
    "image": "images/singularity-open-graph.jpg"
  },
  "page_content": [
    {
      "id": "hero-header",
      "grid": ["noGutter"],
      "col_1": {
        "type": "text_block",
        "cols": {
          "num": "col-5_md-6_sm-6_mi-12_ti-12"
        },
        "h": 1,
        "heading": "Seamlessly onboard <span class='highlight'>PiB scale</span> data to the Filecoin storage network",
        "description": "Singularity is an open source, all-in-one tool for data onboarding, including data preparation, robust deal execution, built-in data indexing and retrieval.",
        "ctas": [
          {
            "text": "Sign up",
            "to": "/signup",
            "tag": "nuxt-link",
            "theme": "primary"
          },
          {
            "text": "Sign up now and be first in line when our demo goes live!",
            "tag": "div",
            "theme": "caption",
            "disabled": true
          }
        ]
      },
      "col_2": {
        "type": "custom",
        "cols": {
          "num": "col-6_mi-12",
          "push_left": "off-1_md-0"
        },
        "customizations": [
          {
            "name": "CodeBlock",
            "props": {
              "block": {
                "lines": [
                  {
